#include <arm/armv7-m.dtsi>
#include <dt-bindings/i2c/i2c.h>

/ {
	cpus {
		#address-cells = <1>;
		#size-cells = <0>;

		cpu@0 {
			device_type = "cpu";
			compatible = "arm,cortex-m4";
			reg = <0>;
		};
	};

	sram0: memory@20100000 {
		device_type = "memory";
		compatible = "mmio-sram";
		reg = <0x20100000 0x20000>;
	};

	flash0: flash@400000 {
		reg = <0x00400000 0x100000>;
	};

	soc {
		i2c0: i2c@40018000 {
			compatible = "atmel,sam-i2c-twi";
			clock-frequency = <I2C_BITRATE_STANDARD>;
			reg = <0x40018000 0x128>;
			interrupts = <19 0>;
			label = "I2C_0";
			status = "disabled";
		};

		i2c1: i2c@4001C000 {
			compatible = "atmel,sam-i2c-twi";
			clock-frequency = <I2C_BITRATE_STANDARD>;
			reg = <0x4001C000 0x128>;
			interrupts = <20 0>;
			label = "I2C_1";
			status = "disabled";
		};

		gpioa: gpio@A {
			compatible = "atmel,sam-gpio";
			reg = <0x400E0E00 0x200>;
			interrupts = <11 2>;
			gpio-controller;
			#gpio-cells = <2>;
			status = "disabled";
			label = "GPIOA";
		};

		gpiob: gpio@B {
			compatible = "atmel,sam-gpio";
			reg = <0x400E1000 0x200>;
			interrupts = <12 2>;
			gpio-controller;
			#gpio-cells = <2>;
			status = "disabled";
			label = "GPIOB";
		};

		gpioc: gpio@C {
			compatible = "atmel,sam-gpio";
			reg = <0x400E1200 0x200>;
			interrupts = <13 2>;
			gpio-controller;
			#gpio-cells = <2>;
			status = "disabled";
			label = "GPIOC";
		};
		
		spi0: spi@0 {
			compatible = "atmel,sam-spi";
			reg = <0x40008000 0x100>;
			interrupts = <21 0>;
			//clocks = <&sim 0x103C 12>;
			status = "disabled";
		};
	
		uart0: uart@0 {
			compatible = "atmel,sam-uart";
			reg = <0x400E0600 0x200>;
			interrupts = <8 0>;
			status = "disabled";
			label = "UART_0";
		};

		uart1: uart@1 {
			compatible = "atmel,sam-uart";
			reg = <0x400E0800 0x200>;
			interrupts = <9 0>;
			status = "disabled";
			label = "UART_1";
		};

		usart0: usart@0 {
			compatible = "atmel,sam-usart";
			reg = <0x40024000 0x130>;
			interrupts = <14 0>;
			status = "disabled";
			label = "USART_0";
		};

		usart1: usart@1 {
			compatible = "atmel,sam-usart";
			reg = <0x40028000 0x130>;
			interrupts = <15 0>;
			status = "disabled";
			label = "USART_1";
		};
	};
};

&nvic {
	arm,num-irq-priority-bits = <4>;
};
