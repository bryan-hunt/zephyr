menuconfig GPIO_SAM
	bool "Atmel SAM PIO Controllers"
	depends on GPIO && SOC_FAMILY_SAM
	default n
	help
	  Enable config options to support the PIO controllers
	  on Atmel SAM family processors.

	  Says n if not sure.

if GPIO_SAM

config GPIO_SAM_PORTA
	bool "Enable driver for Atmel SAM3 PIO Port A"
	default n
	help
	  Build the driver to utilize PIO controller Port A.

config GPIO_SAM_PORTA_IRQ_PRI
	int "Interrupt Priority for Port A"
	depends on GPIO_SAM_PORTA
	default 3
	help
	  Interrupt priority for Port A.

config GPIO_SAM_PORTB
	bool "Enable driver for Atmel SAM PIO Port B"
	default n
	help
	  Build the driver to utilize PIO controller Port B.

config GPIO_SAM_PORTB_IRQ_PRI
	int "Interrupt Priority for Port B"
	depends on GPIO_SAM_PORTB
	default 3
	help
	  Interrupt priority for Port B.

config GPIO_SAM_PORTC
	bool "Enable driver for Atmel SAM PIO Port C"
	default n
	help
	  Build the driver to utilize PIO controller Port C.

config GPIO_SAM_PORTC_IRQ_PRI
	int "Interrupt Priority for Port C"
	depends on GPIO_SAM_PORTC
	default 3
	help
	  Interrupt priority for Port C.

config GPIO_SAM_PORTD
	bool "Enable driver for Atmel SAM PIO Port D"
	default n
	help
	  Build the driver to utilize PIO controller Port D.

config GPIO_SAM_PORTD_IRQ_PRI
	int "Interrupt Priority for Port D"
	depends on GPIO_SAM_PORTD
	default 3
	help
	  Interrupt priority for Port D.

endif # GPIO_SAM
